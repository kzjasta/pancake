<div>
  <h4>Fixtures</h4>
  <% if @user.fixtures.any? %>
    <%@user.fixtures.each do |fixture| %>
      <div id="content-platform">
        <% home_team = fixture.home_team.name %>
        <% away_team = fixture.away_team.name %>
        <% home_score = fixture.home_score.to_s %>
        <% away_score = fixture.away_score.to_s %>

        <h5><%=home_team + " " + home_score + ":" + away_score + " " + away_team %></h5>
        
        <%= link_to "View", fixture_path(fixture) %>
        <p id="spacer">|</p>
        <%= link_to "Edit", edit_fixture_path(fixture) %>
      </div>   
    <% end %>
  <% end %>
</div>
<%= link_to "Add Fixture", new_fixture_path, class: "btn btn-primary" ,id: "add-helper" %>
