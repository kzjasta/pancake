<!DOCTYPE html>
<html>
  <head>
    <title>panCake!</title>
    <%=render 'layouts/shim'%>
  </head>
  <body class="form-bg">
      <div class="container">
        <div class="form-platform">
          <div class="form">
            <div class="row">
              <h1 class="form-title">Add Touch</h1>
            </div>
            <div class="row">
              <div class="col-xs-6 col-xs-offset-3">
                <div class="form-group">
                <!--Add Touch Form -->
                <%= form_for [@match_set, @touch] do  |f| %> 
                  <%= render 'shared/error_messages', object: f.object %>
                  <!-- Team -->
                  <%= f.label :team_id %>
                  <%= f.collection_select :team_id, @teams,:id, :name, {include_blank: "Select team..."}, {class: "form-control"} %>

                  <!-- Player -->
                  <%= f.label :player_id %>
                  <%= f.collection_select :player_id, @players,:id, :last_name, {include_blank: "Select player..."}, {class: "form-control"} %>

                  <!-- Position -->
                  <%= f.label :position %>
                  <%= f.select :position, options_for_select(['1', '2', '3', '4', '5', '6']), {include_blank: "Select position on court..."}, class: "form-control" %>

                  <!-- Touch Type -->
                  <%= f.label :touch_type %>
                  <%= f.select :touch_type, options_for_select(['Attack', 'Block', 'Pass', 'Set']), {include_blank: "Select touch_type..."}, class: "form-control" %>

                  <!-- Touch Result -->
                  <%= f.label :touch_result %>
                  <%= f.select :touch_result, options_for_select(['Score', 'Block', 'Pass', 'Set']), {include_blank: "Select touch_type..."}, class: "form-control" %>
                  
                  <!-- Submit Button -->
                  <%= f.submit "Add Touch", class: "btn btn-primary" %>
                <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>