<div>
  <h4 class="bold">Teams</h4>
  <% if @user.teams.any? %>
    <% @user.teams.each do |team| %>
      <div id="content-platform" class="animated fadeIn">
        <% name = team.name %>
        <% description = team.description %>
        <% capitilized_description = description.slice(0,1).capitalize + description.slice(1..-1) %>

        <h5><%= name.titleize %></h5>
        <p><%=  capitilized_description %></p>
        <%= link_to "View", team_path(team) %>
        <p id="spacer">|</p>
        <%= link_to "Edit", edit_team_path(team) %>
        <p id="spacer">|</p>
        <%= link_to "Remove", team, method: :delete, data:{confirm: "Are you sure? "} %>
      </div>   
    <% end %>
  <% else %>
    <h3 class="center">You have no teams!</h3> 
  <% end %>
</div>
<%= link_to "Add Team", new_team_path, class: "btn btn-primary" ,id: "add-helper" %>
